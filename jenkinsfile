pipeline
{
	agent any
	environment
	{
		IMAGE_NAME="karthirs/myflask"
	}
	
	stages
	{
		stage('Checkout')
		{
			steps
			{
				git url:'git@github.com:BKarthik03/exam_flask.git', branch:'main'
			}
		}
		
		stage('Build Docker Image')
		{
			steps
			{
				script
				{
					dockerImage=docker.build("${IMAGE_NAME}:latest")
				}
			}
		}
		
		stage('Push to DockerHub')
		{
			steps
			{
				script
				{
					docker.withRegistry('https://index.docker.io/v1/','dockerhub')
					{
						dockerImage.push()
					}
				}
			}
		}
	}
	
	post
	{
		success
		{
			echo "Pipeline Successful!!"
		}
		failure
		{
			echo "Pipeline Failed!!"
		}
		always
		{
			echo "Cleaning Workspace"
			deleteDir()
		}
	}
}
